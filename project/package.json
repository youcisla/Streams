{
  "name": "streamlink-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "StreamLink - Universal companion app for streamers and viewers",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "db:migrate": "cd services/api && npx prisma migrate dev",
    "db:studio": "cd services/api && npx prisma studio",
    "db:seed": "cd services/api && npx prisma db seed",
    "db:reset": "cd services/api && npx prisma migrate reset --force"
  },
  "devDependencies": {
    "turbo": "^1.13.4",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "prettier": "^3.0.0",
    "eslint": "^9.11.0",
    "husky": "^9.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "react": "19.1.0",
      "@types/react": "^19.1.10",
      "eslint": "^9.11.0",
      "color-string": "^1.9.1",
      "simple-swizzle": "^0.2.2"
    }
  }
}