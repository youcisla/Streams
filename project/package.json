{
  "name": "streamlink-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "StreamLink - Universal companion app for streamers and viewers",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "dependencies": {
    "@streamlink/ui": "workspace:*",
    "@types/react": "19.1.17",
    "@types/react-dom": "19.1.11",
    "lucide-react": "^0.470.0",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-icons": "^5.2.1"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "db:migrate": "cd services/api && npx prisma migrate dev",
    "db:studio": "cd services/api && npx prisma studio",
    "db:seed": "cd services/api && npx prisma db seed",
    "db:reset": "cd services/api && npx prisma migrate reset --force"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^9.11.0",
    "eslint-plugin-react-refresh": "^0.4.7",
    "globals": "^15.11.0",
    "globby": "^14.0.0",
    "husky": "^9.0.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.0",
    "turbo": "^2.5.8",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.8.1"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "react": "19.1.0",
      "react-dom": "19.1.0",
      "react-test-renderer": "19.1.0",
      "@types/react": "~19.1.10",
      "eslint": "^9.11.0",
      "color-string": "^1.9.1",
      "simple-swizzle": "^0.2.2",
      "is-arrayish": "^0.3.2",
      "styleq": "^0.1.0",
      "fast-base64-decode": "^1.0.0",
      "use-latest-callback": "0.1.9",
      "inline-style-prefixer": "^7.0.0"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "react-native"
      ],
      "allowedVersions": {
        "react": "19",
        "@types/react": "19"
      }
    },
    "packageExtensions": {
      "react-native-web@*": {
        "dependencies": {
          "inline-style-prefixer": "^7.0.0"
        }
      }
    }
  }
}