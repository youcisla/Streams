{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
  "module": "NodeNext",
    "skipLibCheck": true,

    /* Bundler mode */
  "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "types": ["node"],

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts", "tools/**/*.ts"]
}
